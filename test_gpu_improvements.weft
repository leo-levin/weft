// Test file for GPU renderer improvements
// Testing let bindings, assignments, and built-in functions

let x = me.x;
let y = me.y;
let t = me.t;

// Test various math functions
let wave = sin(x * 5.0 + t);
let noise_val = noise(x, y, t);
let mixed = mix(wave, noise_val, 0.5);

// Test assignment operators
let accumulator = 0.0;
accumulator += wave * 0.3;
accumulator += noise_val * 0.3;
accumulator *= saturate(mixed);

// Test conditional and built-ins
let final_val = if accumulator > 0.5 then smoothstep(0.0, 1.0, accumulator) else fract(accumulator * 3.0);

// Test render statement with multiple expressions
render(r: final_val, g: mixed, b: wave);